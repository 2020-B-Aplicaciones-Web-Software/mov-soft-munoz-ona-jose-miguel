<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenida"
        android:textColor="@color/inicial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/btnIrCicloVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ciclo Vida"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnIrListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="LIST VIEW"
        app:layout_constraintEnd_toEndOf="@+id/btnIrCicloVida"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/btnIrCicloVida"
        app:layout_constraintTop_toBottomOf="@+id/btnIrCicloVida" />

    <Button
        android:id="@+id/btnIrIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="INTENT"
        app:layout_constraintEnd_toEndOf="@+id/btnIrListView"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/btnIrListView"
        app:layout_constraintTop_toBottomOf="@+id/btnIrListView" />

    <Button
        android:id="@+id/btnIntentImplicito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Implicito"
        app:layout_constraintEnd_toEndOf="@+id/btnIrIntent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="@+id/btnIrIntent"
        app:layout_constraintTop_toBottomOf="@+id/btnIrIntent" />

    <Button
        android:id="@+id/btnIrListaBd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ir lista BD"
        app:layout_constraintEnd_toEndOf="@+id/btnIntentImplicito"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/btnIntentImplicito"
        app:layout_constraintTop_toBottomOf="@+id/btnIntentImplicito" />

    <Button
        android:id="@+id/btnIrRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Recycler View"
        app:layout_constraintEnd_toEndOf="@+id/btnIrListaBd"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="@+id/btnIrListaBd"
        app:layout_constraintTop_toBottomOf="@+id/btnIrListaBd" />

</androidx.constraintlayout.widget.ConstraintLayout>