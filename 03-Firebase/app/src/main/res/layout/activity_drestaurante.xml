<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DRestaurante">

    <EditText
        android:id="@+id/et_nombre_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar Restaurante"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crear_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Crear Restaurante"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_restaurante"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/et_nombre_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_restaurante" />

    <Button
        android:id="@+id/btn_datos_prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Datos prueba"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_restaurante"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_restaurante" />

    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Consultar"
        app:layout_constraintEnd_toEndOf="@+id/btn_datos_prueba"
        app:layout_constraintStart_toStartOf="@+id/btn_datos_prueba"
        app:layout_constraintTop_toBottomOf="@+id/btn_datos_prueba" />
</androidx.constraintlayout.widget.ConstraintLayout>